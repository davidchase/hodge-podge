<div class="basket-sector">
    <h2>my shopping basket</h2>
    {{#if basket.items}}
        {{#each basket.items}}
            <div class="row  basket--product">
                <div class="medium-2 columns ">
                    <a href="#"><img src="{{imageUrl}}"></a>
                </div>
                <div class="medium-4 columns">
                <p><strong><em>{{displayName}}</em></strong></p>
                <p><strong>${{price}}</strong></p>
                <p>Color: <strong>{{color}}</strong></p>
                <p>Size: <strong>{{size}}</strong></p>
                <p>Quantity: <strong>{{quantity}}</strong> </p>
                <p>Style: {{sku}}</p>
                {{#if giftWrappable}}
                    <p class="gift-wrap hide">Gift wrap available</p>
                {{/if}}
                </div>
                <div class="medium-4 column end">
                    <div class="pane">
                        <button class="btn-actions" data-quantity={{quantity}} data-index={{@index}} >
                            Save For Later
                        </button>
                        <button class="btn-actions remove-item"  data-price="{{price}}" data-quantity={{quantity}} data-index={{@index}} >
                            Remove Item
                        </button>
                        
                    </div>
                </div>
            </div>
        {{/each}}
    {{else}}
        <div class="row">
            <div class="medium-3 medium-centered columns">
                <h2>your basket is currently empty</h2>
            </div>
        </div>
    {{/if}}
</div>