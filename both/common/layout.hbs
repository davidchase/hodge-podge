<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="description" content="">
        <meta name="viewport" content="initial-scale=1, maximum-scale=1.0">
        <title>Checkout Flow</title>
        <link rel="stylesheet" href="./static/css/main.css" />
    </head>
    <body>

        <header role="touch">
            <div class="header">
                <div class="row">
                    <div class="large-3 columns"></div>
                    <div class="large-6 columns"></div>
                    <div class="large-3 columns">
                        <a class="header--num-cart-items right" href="/basket">
                            <span class="cart-icon">Cart</span>
                            <span class="cart-num-items  basket-count">({{totalCartCount}})</span>
                        </a>
                    </div>
                </div>
            </div>
        </header>

        <div id="shell" class="center">
            <div id="wrapper">
                <div class="main-content row">
                    <div id="container" class="large-12 columns" data-site="{{siteData}}">
                        <h2 class="text-center">
                            <img src="http://www.freepeople.com/content/reskins/2014/08-aug/AugustReskin-LogoHeader.png" />
                        </h2>
                        {{{ content }}}
                    </div>
                </div>
                <section class="csr-copyright">
                    <div class="row">
                        <div class="large-12 columns">
                            <div class="customer-service">
                                <div class="copyright">
                                    <span class="copyright--text">&copy;2014 FreePeople.com. All rights reserved.</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>

        <script src="./static/js/vendor-bundle.js"></script>
        <script src="./static/js/app.js"></script>
    </body>
</html>