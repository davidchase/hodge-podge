<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Checkout Flow</title>
        <link rel="stylesheet prefetch" href="./static/css/main.css">
    </head>
    <body>
        <div class="row">
            <div class="medium-12 columns">
                <nav class="top-bar">
                    <section class="top-bar-section">
                     <ul class="right">
                      <li>
                      <a href="/basket">Shopping Basket 
                        <strong class="basket-count">{{totalCartCount}}</strong>
                      </a>
                      </li>
                    </ul>
                    </section>
                </nav>
            </div>
            <header>
                <div class="medium-6 columns">
                    <h1 class="site-title">{{site.name}}</h1>
                </div>
                {{#if basket.items}}
                <div class="medium-3 columns">
                    <div id="action-button" class="action hide">
                     <a class="pink-button white-text" href="{{action.url}}">
                        {{action.label}}
                    </a>
                    </div>
                </div>
                {{/if}}
            </header>
            <div id="container" class="medium-12 columns" data-site="{{siteData}}">
                {{{ content }}}
            </div>
            {{#if basket.items}}
             <div class="cart--summary">
                <div class="row light-gray-bg">
                    <div class="medium-6 columns">Shipping:</div> 
                     <div class="medium-6 columns text-right"><strong>{{basket.pricing.shipping}}</strong></div> 
                </div>
                <div class="row light-gray-bg">
                    <div class="medium-6 columns"> Tax: </div> 
                    <div class="medium-6 columns text-right"><strong>{{basket.pricing.tax}}</strong></div> 
                </div>
                <div class="row">
                    <div class="medium-6 columns">Total:</div> 
                    <div class="medium-6 columns text-right">$<strong class="price-total">{{basket.pricing.total}}</strong></div> 
                 </div>
            </div>
            {{/if}}
            <footer class="medium-12 columns">
                &copy; 2014
            </footer>
        </div>
        <script src="./static/js/vendor-bundle.js"></script>
        <script src="./static/js/app.js"></script>
    </body>
</html>